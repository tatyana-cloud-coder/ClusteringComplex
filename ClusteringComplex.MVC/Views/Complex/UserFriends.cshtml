@model IEnumerable<ClusteringComplex.Entities.UserFriends>

@{
    ViewData["Title"] = "Список друзей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список друзей</h1>

<table class="table">
    @{int rowNo = 0;}
    <thead>
        <tr>
            <th>
                @Html.DisplayName("№")
            </th>
            <th>
                @Html.DisplayName("Фамилия")
            </th>
            <th>
                @Html.DisplayName("Имя")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.Raw(rowNo++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
        </tr>
        }
    </tbody>
</table>
